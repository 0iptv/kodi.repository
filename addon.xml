<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="repository.repo-hub" version="1.0" name="Hub repository" provider-name="YourName">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Hub repository">
            <dir>
                <info compressed="false">https://raw.github.com/0iptv/kodi.repository/master/addons.xml</info>
                <checksum>https://raw.github.com/0iptv/kodi.repository/master/addons.xml.md5</checksum>
                <datadir zip="true">https://github.com/0iptv/kodi.repository/raw/master/zips/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Hub repository</summary>
            <description lang="en">This is official hub repository
            </description>
            <disclaimer lang="en">The provider is not responsible for any issues caused by using this addon.
            </disclaimer>
            <email>your.email@example.com</email>
            <platform>all</platform>
        </extension>
    </addon>
    <addon id="plugin.video.livetv"
        name="CanliTV"
        version="1.0.2"
        provider-name="YourName">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests" version="2.25.1"/>
            <import addon="inputstream.adaptive" version="19.0.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="addon.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <platform>all</platform>
            <summary lang="en_GB">Turkish Live TV Channels</summary>
            <summary lang="tr_TR">Türk Canlı TV Kanalları</summary>
            <description lang="en_GB">Watch Turkish live TV channels directly in Kodi. Provides access to various Turkish TV channels including news, entertainment, sports and more.</description>
            <description lang="tr_TR">Kodi'de Türk canlı TV kanallarını izleyin. Haber, eğlence, spor ve daha fazla çeşitli Türk TV kanallarına erişim sağlar.</description>
            <disclaimer lang="en_GB">This addon provides access to publicly available streams. Users are responsible for compliance with local laws.</disclaimer>
            <disclaimer lang="tr_TR">Bu eklenti halka açık yayınlara erişim sağlar. Kullanıcılar yerel yasalara uygunluktan sorumludur.</disclaimer>
            <language>tr</language>
            <license>GPL-3.0-only</license>
            <forum>https://github.com/yourusername/plugin.video.canlitv/discussions</forum>
            <website>https://github.com/yourusername/plugin.video.canlitv</website>
            <email>your.email@example.com</email>
            <source>https://github.com/yourusername/plugin.video.canlitv</source>
            <assets>
                <icon>resources/media/icon.png</icon>
                <fanart>resources/media/fanart.jpg</fanart>
                <screenshot>resources/media/screenshot01.jpg</screenshot>
                <screenshot>resources/media/screenshot02.jpg</screenshot>
            </assets>
            <news>v1.0.0 (2025-01-21)
    - İlk sürüm
    - Canlı TV kanalları desteği
    - Kategori bazlı filtreleme
    - InputStreamAdaptive desteği</news>
        </extension>
    </addon>

</addons>
